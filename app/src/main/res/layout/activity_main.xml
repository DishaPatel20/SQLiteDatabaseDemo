<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtEnrollNo"
        style="@style/custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="203dp"
        android:fontFamily="serif"
        android:hint="Enter Enrollment Number"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#BD8633"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#BD8633"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtFirstName"
        style="@style/custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:hint="Enter First Name"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#BD8633"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#BD8633"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEnrollNo" />

    <EditText
        android:id="@+id/edtLastName"
        style="@style/custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:hint="Enter Last Name"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#BD8633"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#BD8633"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtFirstName" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLastName">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#E6BCCA"
            android:fontFamily="serif"
            android:onClick="addData"
            android:text="ADD"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#F1DFC5"
            android:fontFamily="serif"
            android:text="Update"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnViewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#CEE8EC"
            android:fontFamily="serif"
            android:onClick="viewAll"
            android:text="View all"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>